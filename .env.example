# Server configuration
PORT=3000
NODE_ENV=development

# Azure Maps API (uses AccuWeather as the underlying data source)
AZURE_MAPS_API_KEY=YOUR_AZURE_MAPS_API_KEY
AZURE_MAPS_BASE_URL=https://atlas.microsoft.com

# Foreca API via RapidAPI
RAPIDAPI_KEY=YOUR_RAPIDAPI_KEY
RAPIDAPI_HOST=foreca-weather.p.rapidapi.com
RAPIDAPI_FORECA_BASE_URL=https://foreca-weather.p.rapidapi.com

# Open Meteo doesn't require an API key
OPEN_METEO_BASE_URL=https://api.open-meteo.com

# Google Weather API
GOOGLE_WEATHER_API_KEY=YOUR_GOOGLE_WEATHER_API_KEY
GOOGLE_WEATHER_BASE_URL=https://weather.googleapis.com

# Cache settings (in seconds)
CACHE_TTL=3600